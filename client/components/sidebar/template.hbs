<section class="{{style.header}}">
  <div class="{{style.user}}">
    <img class="{{style.profilePhoto}}" src="{{currentUser.profilePhoto.url}}" alt="Profile photo"/>
    <div class="{{style.username}}">
      {{currentUser.username}}
    </div>
  </div>
</section>

{{#each navigations}}
  <section class="{{className}}">
    {{#each items}}
      {{#if active}}
        <a class="{{../../style.navigationLink}} {{../../style.isActive}}" href="/{{link}}">{{label}}</a>
      {{else}}
        <a class="{{../../style.navigationLink}}" href="/{{link}}">{{label}}</a>
      {{/if}}
    {{/each}}
  </section>
{{/each}}

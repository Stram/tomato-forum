<div class="{{cardList.header}}">
  <div class="{{cardList.title}}">
    {{name}}
  </div>
  <div class="{{cardList.headerActions}}">
    <div class="{{cardList.headerIconAction}} js-create-new-thread" data-category-id="{{id}}">
      @svg('add-icon-white')
    </div>
  </div>
</div>
<div class="{{cardList.items}} js-category-threads">
  {{#each threadsToShow}}
    <div class="{{../style.threadItem}}">
      <img class="{{../style.profilePhoto}}" src="{{owner.profilePhoto.url}}" alt="{{owner.username}}"/>
      <div class="{{../style.threadTitle}}">{{title}}</div>
    </div>
  {{/each}}
</div>
